/**app.wxss**/

@import "./wxParse/wxParse.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.containsView{
  padding: 15rpx 15prx 15rpx 15rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  background-color: white;
}

.topContainsView{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 18rpx;
}

.profileImage{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}

.topRightView{
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
}

.topRightName{
  font-size: 18rpx;
}

.topRightTime{
  font-size: 14rpx;
  color: #b8b2b2;
  margin-top: 5rpx;
}

.centerContent{
  text-align: justify;
  text-align-last: justify;
  font-size: 30rpx;
}

.centerContent::after {
  width: 100%;
  display: inline-block;
  content: '';
}

.bottomView{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.bottomItemView{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 5rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.bottomItemImage{
  width: 50rpx;
  height: 50rpx;
}

.bottomItemText{
  font-size: 30rpx;
  color: #b8b2b2;
  margin-left: 10rpx;
  margin-top: 8rpx;
}

.divLine{
  background: #f3f3f3;
  width: 100%;
  height: 15rpx;
}