/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  font-size: 40rpx;
  margin-top: 50rpx;
}

.finish-todo {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.list-title {
  font-size: 40rpx;
  font-weight: 900;
  margin-bottom: 20rpx;
}

.list {
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  text-align: justify;
  margin-top: 50rpx;
}

.search-view {
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 100rpx;
}

.search-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}

.search-input {
  border: 3rpx solid;
  border-radius: 15rpx;
}

.search-icon {
  margin-left: 20rpx;
}