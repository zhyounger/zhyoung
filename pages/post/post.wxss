/* pages/post/post.wxss */

.top_view {
  display: flex;
  flex-direction: column;
}

.post_title {
  font-size: 40rpx;
  font-weight: 900;
  text-align: center;
}

.post_date {  
  font-size: 30rpx;
  text-align: center;
}

.content_view {
  margin-top: 30rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
}

.post_content {
  text-align: justify;
  text-align-last: justify;
}

.post_content::after {
  width: 100%;
  display: inline-block;
  content: '';
}