/* pages/about/about.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.top-view {
  position: fixed;
  top: 0;
}

.scroll-view {
  position: fixed;
  top: 200rpx;
  width: 100%;
  /* margin-top: 150rpx; */
  /* margin-bottom: 5rpx; */
}

.contains-view {
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.comment-floor-view {
  display: flex;
  flex-direction: column;
  font-size: 40rpx;
  font-weight: 600;
  width: 100rpx;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.left-line {
  height: 100rpx;
  border-right: 5rpx dashed #f3f3f3;
}

.comment-right-view {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.author-date-view {
  display: flex;
  flex-direction: column;
}

.comment-author {
  font-size: 30rpx;
}

.comment-date {
  font-size: 20rpx;
  color: #b8b2b2;
}

.comment-content-view {
  margin-top: 5rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}

.comment-bottom-view {
  width: 470rpx;
}

.reply-text {  
  font-size: 30rpx;
  color: #b8b2b2;
}

.floor-text { 
  font-size: 30rpx;
}

.comment-content-text {
  font-size: 30rpx;
}

.reply-btn-view {
}

.reply-btn {
  height: 38rpx;
  line-height: 30rpx;
  font-size: 25rpx;
  border: none;
  background: white;
}

.reply-btn::after {
  border: none;
}


.message-view {
  position: fixed;
  bottom: 0;
}

.about-text{
  font-size: 45rpx;
}

.about-contact-view{
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: center;
}

.about-contact{
  margin-top: 5rpx;
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.about-contact-img{
  margin-top: 10rpx;
  height: 20rpx;
  width: 20rpx;
  border-radius: 60rpx;
}

.about-contact-text{
  margin-top: 10rpx;
  margin-left: 10rpx;
  margin-right: 15rpx;
  font-size: 20rpx;
}

.message-top {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  left: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  justify-content: space-between;
  align-items: center;
}

.message-count {
  margin-left: 5rpx;
}

.divLine {
  margin-top: 5rpx;
}